<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="4.1-create-task-table" author="yourname">
        <createTable tableName="task">
            <column name="task_id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="description" type="varchar(255)"/>
            <column name="is_finished" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="objective_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint constraintName="fk_task_objective"
                                  baseTableName="task"
                                  baseColumnNames="objective_id"
                                  referencedTableName="objective"
                                  referencedColumnNames="objective_id"/>
    </changeSet>

    <changeSet id="4.1-modify-objective-table" author="yourname">
        <addColumn tableName="objective">
            <column name="tasks" type="bigint"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>